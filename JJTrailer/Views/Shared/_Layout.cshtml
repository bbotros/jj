<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--departmen menu-->
    <link href="~/Content/dropdown.css" rel="stylesheet" />
    <link href="~/Content/amzonmenu.css" rel="stylesheet" />
    <!--search-->
    <link href="~/Content/jquery.typeahead.css" rel="stylesheet" />
</head>
<body>
    <!--nav bar-->
 @{ Html.RenderPartial("_navbar1");}
    <!--second navbar-->
    @{ Html.RenderPartial("_navbar2");}
    <div class="container body-content">
        <br />
        @RenderBody()
        <hr />
     @Html.Partial("_footer")
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!--dropdown2-->
    <script src="~/Scripts/dropdown/dropdown.js"></script>
    <script src="~/Scripts/amazonmenu/amazonmenu.js"></script>
    <!--search-->
    <script src="~/Scripts/jquery.typeahead.js"></script>
    <!--header-->
    <script src="~/Scripts/Spritely/jquery.spritely.js"></script>
    <!--init code-->
    <script src="~/Scripts/initcode.js"></script>
    @Html.Partial("_departmentmenu")
    @Html.Partial("_shoppingCart")
    @Html.Partial("_Account")
 @RenderSection("scripts", required: false)
</body>
</html>
